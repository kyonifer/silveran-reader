#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")" && pwd)"
cd "${SCRIPT_DIR}/.."

xcodebuild -project Silveran.xcodeproj \
	-scheme "Silveran Reader (macOS)" \
	-configuration Debug \
	-destination 'generic/platform=macOS' \
	-derivedDataPath .buildMac build | xcbeautify
