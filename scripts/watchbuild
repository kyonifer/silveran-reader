#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")" && pwd)"
cd "${SCRIPT_DIR}/.."

xcodebuild -project Silveran.xcodeproj \
    -scheme "Silveran Reader (watchOS)" \
    -configuration Debug \
    -destination 'platform=watchOS Simulator,name=s7 paired' \
    -derivedDataPath .buildWatch build | xcbeautify
